   <body>
      <h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% Book.get_all_books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%=link_to "Show",book_path(book.id) %></td>
          <td><%=link_to "Edit",edit_path(book.id) %></td>
          <td><%= link_to "Destroy",destroy_path(book.id), method: :delete, "data-confirm" =>"Are you sure?"  %></td>
        </tr>
    <% end %>
  </tbody>
</table>

<h2>New book</h2>
    <% if @book && @book.errors.any? %>
    <%= @book.errors.count %>件のerrorが発生しました
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

<%= form_with model: Book.new, url:'/books' do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  </br>
  <%= f.submit 'Create Book' %>

<% end %>
  </body>
</html>